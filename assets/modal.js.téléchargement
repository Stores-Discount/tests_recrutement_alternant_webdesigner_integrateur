function createModalAction(title,content,cssSsettings,fullInnerWidth){var modalZone=document.querySelector("#modalZone"),html="",text="",noPadding=!0===fullInnerWidth,randomId=Math.random().toString(36).substr(2,9);Array.isArray(content)?content.forEach(function(elm){text+=elm+"<br/>"}):text="string"==typeof content?content:'<div id="modal-'+randomId+'"></div>';var elementClass="";void 0!==cssSsettings&&cssSsettings.class&&(elementClass+=cssSsettings.class),noPadding?(html+='<div class="modal generatedModal">',html+='<div class="modal-content modal-content-large '+elementClass+'">',html+='<div class="modal-body columns is-multiline modal-body-no-padding">',html+='<div class="column is-12">'+text+"</div>",html+="</div>",html+="</div>",html+="</div>"):(html+='<div class="modal generatedModal">',html+='<div class="modal-content '+elementClass+'">',html+="<button class='closeIcon' onclick='closeModalAction",html+='(".generatedModal")',html+="'></button>",html+='<div class="modal-header">',html+="<h5>"+title+"</h5>",html+="</div>",html+='<div class="modal-body columns is-multiline">',html+='<div class="column is-12">'+text+"</div>",html+="</div>",html+="</div>",html+="</div>"),modalZone.innerHTML=html,Array.isArray(content)||"string"==typeof content||modalZone.querySelector("#modal-"+randomId).appendChild(content),showModalAction(".generatedModal")}function showModalAction(modal){(modal=document.querySelector(modal)).style.display="block",document.querySelector("body").style.overflowY="hidden",document.querySelector(".page-container").style.position="initial",document.querySelector(".mainPageZone").style.position="initial"}function closeModalAction(classModal){var modal=null;(modal=!classModal||void 0!==classModal.classList&&classModal.classList?classModal:document.querySelector(classModal)).style.display="none",document.querySelector("body").style.overflowY="auto",document.querySelector(".page-container").style.position="relative",document.querySelector(".mainPageZone").style.position="relative",".generatedModal"==classModal&&(isIE()?modal.parentNode.removeChild(modal):modal.remove())}function isIE(){var ua=window.navigator.userAgent;return ua.indexOf("Edge/")>0||ua.indexOf("Trident/")>0||ua.indexOf("MSIE ")>0}function isIOSMAC(){return-1!=navigator.userAgent.indexOf("Mac OS X")}document.addEventListener("keydown",function(e){"Escape"===e.key&&Array.from(document.querySelectorAll(".modal")).forEach(function(modal){"block"===window.getComputedStyle(modal).display&&closeModalAction(modal)})}),document.addEventListener("click",function(e){e.target.classList.contains("modal")&&closeModalAction(e.target)});