function easyHTTP(){this.http=new XMLHttpRequest}easyHTTP.prototype.get=function(url,callback){this.http.open("GET",url,!0);var self=this;this.http.onload=function(){200===self.http.status?callback(null,self.http.responseText):callback("Error "+self.http.status,self.http.responseText)},this.http.send()},easyHTTP.prototype.post=function(url,data,callback){this.http.open("POST",url,!0),this.http.setRequestHeader("content-type","application/json");var self=this;this.http.onload=function(){201===self.http.status||200===self.http.status?callback(null,self.http.responseText):callback("Error "+self.http.status,self.http.responseText)},this.http.send(JSON.stringify(data))},easyHTTP.prototype.put=function(url,data,callback){this.http.open("PUT",url,!0),this.http.setRequestHeader("content-type","application/json");var self=this;this.http.onload=function(){200===self.http.status?callback(null,self.http.responseText):callback("Error "+self.http.status,self.http.responseText)},this.http.send(JSON.stringify(data))},easyHTTP.prototype.delete=function(url,data,callback){this.http.open("DELETE",url,!0),this.http.setRequestHeader("content-type","application/json");var self=this;this.http.onload=function(){200===self.http.status?callback(null,"POST DELETED"):callback("Error "+self.http.status,self.http.responseText)},this.http.send(JSON.stringify(data))};