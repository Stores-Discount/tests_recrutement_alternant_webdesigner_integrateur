function remainingTime(endtime,functionFinish,selector,tick){if(timestamp=endtime-Math.round((new Date).getTime()/1e3),void 0===functionFinish&&(functionFinish="none"),timestamp<=0)void 0!==functionFinish&&"none"!=functionFinish&&setTimeout(functionFinish,0);else if(timestamp>0){var elm;if(setTimeout(function(){remainingTime(endtime,functionFinish,selector,tick)},tick),jour=Math.floor(timestamp/86400),heure=Math.floor((timestamp-86400*jour)/3600),minute=Math.floor((timestamp-86400*jour-3600*heure)/60),second=Math.round(timestamp-86400*jour-3600*heure-60*minute),heure<10&&(heure="0"+heure),minute<10&&(minute="0"+minute),second<10&&(second="0"+second),void 0!==selector&&(elm=document.getElementsByClassName(selector)[0]),void 0===elm)return jour>1?jour+" jours  et "+heure+":"+minute+":"+second:1==jour?jour+" jour et "+heure+":"+minute+":"+second:heure+":"+minute+":"+second;jour>0?elm.innerHTML=jour+"j "+heure+"h "+minute+"min "+second+"s":heure>0?elm.innerHTML=heure+"h "+minute+"min "+second+"s":elm.innerHTML=minute+" min "+second+" s"}return!0}function decompteTime(timestamp,functionFinish,selector){if(void 0===functionFinish&&(functionFinish="none"),timestamp<=0)void 0!==functionFinish&&"none"!=functionFinish&&setTimeout(functionFinish,0);else if(timestamp>0){var elm;if(setTimeout(function(){decompteTime(timestamp-1,functionFinish,selector)},1e3),jour=Math.floor(timestamp/86400),heure=Math.floor((timestamp-86400*jour)/3600),minute=Math.floor((timestamp-86400*jour-3600*heure)/60),second=Math.round(timestamp-86400*jour-3600*heure-60*minute),heure<10&&(heure="0"+heure),minute<10&&(minute="0"+minute),second<10&&(second="0"+second),void 0!==selector&&(elm=document.getElementsByClassName(selector)[0]),void 0===elm)return jour>1?jour+" jours  et "+heure+":"+minute+":"+second:1==jour?jour+" jour et "+heure+":"+minute+":"+second:heure+":"+minute+":"+second;jour>0?elm.innerHTML=jour+"j "+heure+"h "+minute+"min "+second+"s":heure>0?elm.innerHTML=heure+"h "+minute+"min "+second+"s":elm.innerHTML=minute+" min "+second+" s"}return!0}