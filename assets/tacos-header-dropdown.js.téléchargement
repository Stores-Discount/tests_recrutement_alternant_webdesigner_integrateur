document.addEventListener("DOMContentLoaded",function(e){var isDisplayed=!1,isTimer=0,onHeader=!1,focusInput=!1,hoveredElement=!1;function whichDevice(){return document.documentElement.offsetWidth>1087?"desktop":document.documentElement.offsetWidth<=1087&&document.documentElement.offsetWidth>767?"tablet":"mobile"}var currentDevice=whichDevice();function checkDisapearence(){focusInput||onHeader?isTimer&&(clearTimeout(isTimer),isTimer=0):isTimer=setTimeout(function(){document.querySelector("header .header-links .dropdown").style.display="none"},750)}function executeLooseFocus(){(hoveredElement.classList&&!hoveredElement.classList.contains("account-column")&&"INPUT"!=hoveredElement.nodeName||!hoveredElement.classList)&&(Array.from(document.querySelectorAll("header .header-links .account-column input")).forEach(function(input){hoveredElement&&input.blur()}),onHeader=!1,checkDisapearence())}window.addEventListener("resize",function(){currentDevice=whichDevice()}),document.querySelector("header .header-links .account-column").addEventListener("mouseenter",function(e){if("mobile"===currentDevice)return!0;document.querySelector("header .header-links .account-column .dropdown").style.display="block",isDisplayed=!0,onHeader=!0,checkDisapearence()}),document.querySelector("header .header-links .account-column").addEventListener("mouseleave",function(e){if(hoveredElement=!1,"mobile"===currentDevice)return!0;executeLooseFocus()}),window.onmouseover=function(e){hoveredElement=(e.target,e.target)},document.addEventListener("readystatechange",function(e){"complete"==e.target.readyState&&Array.from(document.querySelectorAll("header .header-links .dropdown .cc-input")).forEach(function(input){input.addEventListener("focus",function(){if("mobile"===currentDevice)return!0;setTimeout(function(){focusInput=!0,checkDisapearence()},100)}),input.addEventListener("blur",function(){if("mobile"===currentDevice)return!0;focusInput=!1,checkDisapearence()})})}),document.addEventListener("scroll",function(event){isDisplayed&&(document.querySelector("header .header-links .dropdown").style.display="none",isDisplayed=!isDisplayed)},!0),document.addEventListener("mouseup",function(e){if("mobile"===currentDevice)return!0;var container=document.querySelector("header .header-links .account-column");container.clasName!=e.target.clasName&&0===container.has(e.target).length&&(document.querySelector("header .header-links .account-column .dropdown").style.display="none")})});